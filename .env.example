# SalesCompass Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# REQUIRED IN PRODUCTION
# =============================================================================

# Django secret key - generate with: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=your-secret-key-here

# Database URL (PostgreSQL)
DATABASE_URL=postgres://user:password@localhost:5432/salescompass

# =============================================================================
# OPTIONAL
# =============================================================================

# Debug mode (set to False in production)
DEBUG=True

# Redis URL for Celery and Channels
REDIS_URL=redis://localhost:6379/0

# Elasticsearch
ELASTICSEARCH_HOST=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=salescompass
# ELASTICSEARCH_USERNAME=
# ELASTICSEARCH_PASSWORD=
# ELASTICSEARCH_USE_SSL=False
# ELASTICSEARCH_VERIFY_CERTS=True

# =============================================================================
# REPLIT DEPLOYMENT (auto-configured)
# =============================================================================
# REPLIT_DEPLOYMENT=1
# REPL_SLUG=
# REPL_OWNER=
# REPLIT_DEV_DOMAIN=

# =============================================================================
# WAZO TELEPHONY PLATFORM
# =============================================================================
# Core API settings (required)
WAZO_API_URL=http://localhost:9497
WAZO_API_KEY=your-wazo-api-token-here
WAZO_TENANT_UUID=your-tenant-uuid-here

# Service URLs (for Docker network)
WAZO_AUTH_URL=http://wazo-auth:9497
WAZO_CONFD_URL=http://wazo-confd:9486
WAZO_CALLD_URL=http://wazo-calld:9500
WAZO_CHATD_URL=http://wazo-chatd:9304
WAZO_CALL_LOG_URL=http://wazo-call-logd:9295
WAZO_AGENTD_URL=http://wazo-agentd:9493
WAZO_WEBHOOKD_URL=http://wazo-webhookd:9300

# Webhook callback URL (your CRM endpoint that Wazo will call)
WAZO_WEBHOOK_CALLBACK_URL=http://web:8000/wazo/webhooks/

# =============================================================================
# SIP TRUNK CONFIGURATION (for external PSTN calls)
# =============================================================================
# SIP_TRUNK_HOST=sip.provider.com
# SIP_TRUNK_USERNAME=your-sip-username
# SIP_TRUNK_PASSWORD=your-sip-password
# SIP_TRUNK_PORT=5060

# =============================================================================
# STRIPE (for billing)
# =============================================================================
# STRIPE_SECRET_KEY=sk_test_...
# STRIPE_PUBLISHABLE_KEY=pk_test_...
# STRIPE_WEBHOOK_SECRET=whsec_...

