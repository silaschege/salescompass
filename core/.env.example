# =============================================================================
# SalesCompass Environment Configuration
# Copy this file to .env and fill in your values
# =============================================================================

# --- Django Core ---
SECRET_KEY=your-secure-secret-key-here
DEBUG=False
DATABASE_URL=postgres://user:password@localhost:5432/salescompass
REDIS_URL=redis://localhost:6379/0

# --- Allowed Hosts (comma-separated) ---
# ALLOWED_HOSTS=localhost,127.0.0.1,crm.salescompass.io

# =============================================================================
# WAZO PLATFORM CONFIGURATION
# =============================================================================

# Base Wazo API URL
WAZO_API_URL=http://wazo-auth:9497

# API key for authentication (get from Wazo admin)
WAZO_API_KEY=your-wazo-api-key

# Tenant UUID for multi-tenant isolation
WAZO_TENANT_UUID=your-tenant-uuid

# Service-specific URLs (optional - falls back to base URL)
WAZO_AUTH_URL=http://wazo-auth:9497
WAZO_CALLD_URL=http://wazo-calld:9500
WAZO_CHATD_URL=http://wazo-chatd:9304
WAZO_CONFD_URL=http://wazo-confd:9486
WAZO_AGENTD_URL=http://wazo-agentd:9493
WAZO_CALL_LOG_URL=http://wazo-call-logd:9295
WAZO_WEBHOOKD_URL=http://wazo-webhookd:9300

# Webhook Security
WAZO_WEBHOOK_SECRET=your-webhook-hmac-secret
WAZO_DEFAULT_SMS_NUMBER=+15551234567

# =============================================================================
# TWILIO CONFIGURATION
# =============================================================================

# --- Twilio Account ---
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-auth-token

# --- Twilio SIP Trunk ---
TWILIO_SIP_DOMAIN=salescompass
TWILIO_SIP_USERNAME=your-sip-username
TWILIO_SIP_PASSWORD=your-sip-password
TWILIO_CALLER_ID=+15551234567

# --- Twilio WhatsApp ---
TWILIO_WHATSAPP_NUMBER=+14155238886
TWILIO_WHATSAPP_SANDBOX=True
# For production: set TWILIO_WHATSAPP_SANDBOX=False and use your approved number

# =============================================================================
# EMAIL CONFIGURATION (SendGrid)
# =============================================================================

SENDGRID_API_KEY=your-sendgrid-key
DEFAULT_FROM_EMAIL=noreply@salescompass.io

# =============================================================================
# PAYMENT CONFIGURATION (Stripe)
# =============================================================================

STRIPE_SECRET_KEY=sk_live_xxx
STRIPE_PUBLISHABLE_KEY=pk_live_xxx
STRIPE_WEBHOOK_SECRET=whsec_xxx

# =============================================================================
# SEARCH CONFIGURATION (Elasticsearch)
# =============================================================================

ELASTICSEARCH_HOST=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=salescompass
# ELASTICSEARCH_USERNAME=
# ELASTICSEARCH_PASSWORD=
# ELASTICSEARCH_USE_SSL=False

# =============================================================================
# WEBRTC CONFIGURATION
# =============================================================================

WEBRTC_ENABLED=True
STUN_SERVER=stun:stun.l.google.com:19302
# TURN_SERVER=turn:your-turn-server.com:3478
# TURN_USERNAME=your-turn-username
# TURN_PASSWORD=your-turn-password

# =============================================================================
# ML SERVICE (Optional)
# =============================================================================

# ML_SERVICE_URL=http://localhost:8001/api/v1/ml/
